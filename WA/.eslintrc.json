{
	"root": true,
	"env": {
		"es2021": true,
		"node": true,
		"jest": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-console": [
			"error",
			{
				"allow": ["warn", "error"]
			}
		],
		"semi": [2, "always"],
		"indent": ["error", "tab"],
		"quotes": ["error", "double"]
	}
}
